load("@obazl_rules_ocaml//ocaml:rules.bzl", "ocaml_lex", "ocaml_module", "ocaml_ns_archive", "ocaml_signature", "ppx_executable", "ppx_module", "ppx_ns_archive")

ocaml_module(
    name = "final",
    deps_opam = [
        "angstrom",
        "re",
        "ipaddr",
    ],
    opts = [
        "-open",
        "Angstrom",
    ],
    struct = ":final.ml",
)

ocaml_lex(
    name = "lexy_ml",
    src = ":lexy.mll",
)

ocaml_module(
    name = "lexy",
    deps_opam = [
        "angstrom",
        "re",
        "ipaddr",
    ],
    opts = [
        "-w",
        "-39",
    ],
    struct = ":lexy_ml",
)

ocaml_signature(
    name = "new__sig",
    src = ":new.mli",
    deps_opam = [
        "angstrom",
        "re",
        "ipaddr",
    ],
    opts = [
        "-open",
        "Angstrom",
    ],
)

ocaml_module(
    name = "new",
    deps_opam = [
        "angstrom",
        "re",
        "ipaddr",
    ],
    opts = [
        "-open",
        "Angstrom",
    ],
    sig = ":new__sig",
    struct = ":new.ml",
)

ocaml_module(
    name = "sub",
    deps_opam = [
        "angstrom",
        "re",
        "ipaddr",
    ],
    opts = [
        "-open",
        "Angstrom",
    ],
    struct = ":sub.ml",
)

# okapi:auto
# okapi:public_name sub-lib
ocaml_ns_archive(
    name = "#Sub_lib",
    submodules = [
        ":final",
        ":new",
        ":sub",
    ],
    visibility = ["//visibility:public"],
)

ppx_executable(
    name = "ppx_sub_extra_lib",
    deps_opam = ["ppx_inline_test"],
    main = "@obazl_rules_ocaml//dsl:ppx_driver",
)


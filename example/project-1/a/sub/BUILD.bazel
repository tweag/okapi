    name = "bar",
    deps_opam = [
        "virt",
        "ppx_inline_test",
    ],
    ppx = ":ppx_sub_extra_lib",
    ppx_print = "@ppx//print:text",
    ppx_tags = ["inline-test"],
    struct = ":bar.ml",
    deps = ["@okapi-test//a:#A"],
)

ocaml_signature(
    name = "foo__sig",
    src = ":foo.mli",
    deps_opam = [
        "virt",
        "ppx_inline_test",
    ],
    ppx = ":ppx_sub_extra_lib",
    ppx_print = "@ppx//print:text",
    ppx_tags = ["inline-test"],
    deps = [
        ":bar",
        "@okapi-test//a:#A",
    ],
)

ppx_module(
    name = "foo",
    deps_opam = [
        "virt",
        "ppx_inline_test",
    ],
    ppx = ":ppx_sub_extra_lib",
    ppx_print = "@ppx//print:text",
    ppx_tags = ["inline-test"],
    sig = ":foo__sig",
    struct = ":foo.ml",
    deps = [
        ":bar",
        "@okapi-test//a:#A",
    ],
